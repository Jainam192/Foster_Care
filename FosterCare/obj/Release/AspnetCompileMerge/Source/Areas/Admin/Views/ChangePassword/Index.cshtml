
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function myFun() {
        var a = document.getElementById("NewPassword").value;
        var b = document.getElementById("ConfirmPassword").value;
        if (a != b) {
            document.getElementById("msg").innerText = "Password couldn't Match";
            document.getElementById("ConfirmPassword").value = "";
        }
        else {
            document.getElementById("msg").innerText = "";
        }
    }
</script>
<section class="content-header">
    <h1>
        Change Password
    </h1>
</section>
<section class="content">
    <div class="row">
        <form id="frmChangePassword" action="/Admin/ChangePassword" method="post">
            <div class="col-md-12">
                <div class="box box-primary">
                    @if (TempData["FailMessage"] != null)
                    {
                        <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }
                    <div class="box-warning">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Enter Old Password</label>
                                <input id="OldPassword" class="form-control" type="password" name="OldPassword" placeholder="Old Password" required="" data-error="Please Enter Old Password First" />
                            </div>
                            <div class="form-group">
                                <label>Enter New Password</label><br />
                                <input id="NewPassword" class="form-control" type="text" name="NewPassword" placeholder="New Password" required="" />
                            </div>
                            <div class="form-group">
                                <label>Enter Confirm Password</label><br />
                                <input id="ConfirmPassword" class="form-control" type="text" name="ConfirmPassword" placeholder="Confirm Password" onblur="myFun()" required="" />
                                <span id="msg" style="color:red"></span>
                            </div>
                        </div>
                        <div class="box-footer">
                            <input class="btn btn-primary" type="submit" value="Submit" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

