@model IEnumerable<FosterCare.PotentialParentMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>All Potential Parent Master<small>(Add, View, Edit, Delete Potential Parent Master)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12 mb5">
            <a href="/Admin/PotentialParentMasters/Create/" class="btn btn-dropbox">Add New Potential Parent</a>
        </div>
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">All Potential Parent</h3>
            </div>
            <div>

                @using (Html.BeginForm("Index", "PotentialParentMasters", FormMethod.Get))
                {
                    <p>
                        <input type="text" id="search" name="search" placeholder="Search By Aplicants Name Or Contact Number " style="width:300px;margin-left:10px" />
                        <input type="submit" value="Search" />
                    </p>
                }

            </div>
            <div class="box-body">
                @if (Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    Serial Number
                                </th>
                                <th>
                                    Applicants Name
                                </th>

                                <th>
                                    Contact Number
                                </th>
                                <th>
                                    Applicants DOB
                                </th>
                                <th>
                                    Age
                                </th>
                                <th>
                                    Create Date
                                </th>
                                <th>
                                    User Name
                                </th>
                                <th>Action</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SerialNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicantsName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicantsDOB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Age)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminLoginTbl.UserName)
                                    </td>
                                    <td>
                                        <a class="btn btn-xs btn-warning" href="/admin/PotentialParentMasters/Edit/@item.ID">Edit <i class="fa fa-edit"></i></a>
                                        <a data-toggle="modal" data-target="#modal-delete-@item.ID" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                        <div class="modal fade text-center" id="modal-delete-@item.ID">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h4 class="modal-title">Potential Parent item  Delete Confirmation</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4>Are you Sure you want to delete Potential Parent item</h4>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                        <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "PotentialParentMasters", new { id = item.ID })">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div><br />
                                        <a data-toggle="modal" data-target="#modal-details-@item.ID" class="btn btn-xs btn-twitter">Details <i class="fa fa-list"></i></a>
                                        <div class="modal fade text-center" id="modal-details-@item.ID">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h3 class="modal-title">Parent Master Details</h3>
                                                    </div>
                                                    <div class="modal-body" style="height: 400px; overflow-y: scroll">
                                                        <table class="table table-bordered" style="text-align:left;">

                                                            <tr>
                                                                <td>
                                                                    Applicants Address
                                                                </td>
                                                                <td>
                                                                    @item.ApplicantsAddress
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Applicants Highest Education
                                                                </td>
                                                                <td>
                                                                    @item.ApplicantsHighestEducation
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Martial Status
                                                                </td>
                                                                <td>
                                                                    @item.MartialStatus
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Do You Have Children
                                                                </td>
                                                                <td>
                                                                    @item.DoYouHaveChildren
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Children Count
                                                                </td>
                                                                <td>
                                                                    @item.ChildrenCount
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Is Legal Case
                                                                </td>
                                                                <td>
                                                                    @item.IsLegalCase
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Is Know Foster Care
                                                                </td>
                                                                <td>
                                                                    @item.IsKnowFosterCare
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    You Willing To Foster A Child
                                                                </td>
                                                                <td>
                                                                    @item.YouWillingToFosterAChild
                                                                </td>
                                                            </tr>
                                                            <tr>

                                                                <td>
                                                                    Any Question
                                                                </td>
                                                                <td>
                                                                    @item.AnyQuestion
                                                                </td>
                                                            </tr>


                                                        </table>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </td>
                                </tr>

                            }

                        </table>
                    </div>
                }
                else
                {
                    <h3 class="box-title">Record Not Found</h3>
                }

            </div>
        </div>
        </div>
    </div>

</section>