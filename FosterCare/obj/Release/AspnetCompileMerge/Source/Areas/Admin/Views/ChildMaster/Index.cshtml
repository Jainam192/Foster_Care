@model IEnumerable<FosterCare.ChildMasterTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>All Child Master<small>(Add, View, Edit, Delete Child Master)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12 mb5">
            <a href="/Admin/ChildMaster/Create/" class="btn btn-dropbox">Add New Child Master</a>
        </div>
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">All Child Master</h3>
            </div>
            <div>

                @using (Html.BeginForm("Index", "ChildMaster", FormMethod.Get))
                {
                    <p>
                        <input type="text" id="search" name="search" placeholder="Search By Child Name Or Child Code " style="width:300px;margin-left:10px" />
                        <input type="submit" value="Search" />
                    </p>
                }

            </div>
            <div class="box-body">
                @if (Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    Serial Number
                                </th>
                                <th>
                                    Institude Name
                                </th>
                                <th>
                                    CCI District Name
                                </th>
                                <th>
                                    Child Code
                                </th>
                                <th>
                                    Child Name
                                </th>
                                <th>
                                    Sex
                                </th>
                                <th>
                                    DOB
                                </th>
                                <th>
                                    Age
                                </th>

                                <th>
                                    Create Date
                                </th>
                                <th>
                                    Last Follow Up Date
                                </th>
                              <th>
                                  User Name
                              </th>

                                <th>Action</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SerialNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CCIMasterTbl.InstitudeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DistrictMasterTbl.DistrictName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChildCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChildName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sex)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DOB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Age)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastFollowUpDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminLoginTbl.UserName)
                                    </td>
                                    <td>
                                        <a class="btn btn-xs btn-warning" href="/admin/ChildMaster/Edit/@item.ID">Edit <i class="fa fa-edit"></i></a>
                                        <a data-toggle="modal" data-target="#modal-delete-@item.ID" class="btn btn-xs btn-danger" >Delete <i class="fa fa-trash-o"></i></a>
                                        <div class="modal fade text-center" id="modal-delete-@item.ID">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h4 class="modal-title">Child Master item  Delete Confirmation</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4>Are you Sure you want to delete Child Master item</h4>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                        <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "ChildMaster", new { id = item.ID })">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div><br />
                                        <a data-toggle="modal" data-target="#modal-details-@item.ID" class="btn btn-xs btn-twitter">Details <i class="fa fa-list"></i></a>
                                        <div class="modal fade text-center" id="modal-details-@item.ID">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h3 class="modal-title">Child Master Details</h3>
                                                    </div>
                                                    <div class="modal-body" style="height: 400px; overflow-y: scroll">
                                                        <table class="table table-bordered" style="text-align:left;">

                                                            <tr>
                                                                <td>
                                                                    Education
                                                                </td>
                                                                <td>
                                                                    @item.Education
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Social Group
                                                                </td>
                                                                <td>
                                                                    @item.SocialGroup
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Special Child
                                                                </td>
                                                                <td>
                                                                    @item.SpecialChild
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Mothers Name
                                                                </td>
                                                                <td>
                                                                    @item.MothersName
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Mothers Current Status
                                                                </td>
                                                                <td>
                                                                    @item.MothersCurrentStatus
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Fathers Name
                                                                </td>
                                                                <td>
                                                                    @item.FathersName
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Fathers Current Status
                                                                </td>
                                                                <td>
                                                                    @item.FathersCurrentStatus
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Sisters Count
                                                                </td>
                                                                <td>
                                                                    @item.SistersCount
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Brothers Count
                                                                </td>
                                                                <td>
                                                                    @item.BrothersCount
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Sibling Count
                                                                </td>
                                                                <td>
                                                                    @item.SiblingCount
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Care Taker Address
                                                                </td>
                                                                <td>
                                                                    @item.CaretakerAddress
                                                                </td>
                                                            </tr>
                                                            <tr>

                                                                <td>
                                                                    Address District
                                                                </td>
                                                                <td>
                                                                    @item.DistrictMasterTbl3.DistrictName

                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Contact Number
                                                                </td>
                                                                <td>
                                                                    @item.ContactNumber
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Closest Alive Relative
                                                                </td>
                                                                <td>
                                                                    @item.ClosestAliveRelative
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Relative Address
                                                                </td>
                                                                <td>
                                                                    @item.RelativeAddress
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Relative Contact Number
                                                                </td>
                                                                <td>
                                                                    @item.RelativeContactNumber
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Data Collection Date
                                                                </td>
                                                                <td>
                                                                    @item.DataCollectionDate
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Child Care Institution Enroll Date
                                                                </td>
                                                                <td>
                                                                    @item.ChildCareInstitutionEnrollDate
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Child Consent To Fostering
                                                                </td>
                                                                <td>
                                                                    @item.ChildConsentToFostering
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Biological Parents Consent To Fostering
                                                                </td>
                                                                <td>
                                                                    @item.BiologicalParentsConsentToFostering
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    In CCI For
                                                                </td>
                                                                <td>
                                                                    @item.InCCIFor
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Potential For Foster
                                                                </td>
                                                                <td>
                                                                    @item.PotentialForFoster
                                                                </td>
                                                            </tr>
                                                            <tr>

                                                                <td>
                                                                    Is Fostering
                                                                </td>
                                                                <td>
                                                                    @item.IsFostering
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td>
                                                                    Placement District
                                                                </td>
                                                                <td>
                                                                    @item.DistrictMasterTbl1.DistrictName
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Monitoring District
                                                                </td>
                                                                <td>
                                                                    @item.DistrictMasterTbl2.DistrictName

                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    Last Follow Up Date
                                                                </td>
                                                                <td>
                                                                    @item.LastFollowUpDate
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <a data-toggle="modal" data-target="#modal-change-@item.ID" class="btn btn-xs btn-facebook">Assign Parent<i class="fa fa-edit"></i></a>
                                        <div class="modal fade text-center" id="modal-change-@item.ID">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h4 class="modal-title">Assign Parent</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form action="/Admin/ChildMaster/AssignParent" method="post">
                                                            <div class="form-group">
                                                                <label>Parent Name</label>
                                                                @Html.DropDownList("ParentID", null, "----Select----", htmlAttributes: new { @class = "form-control", required = "required", id="ParentID_"+@item.ID })
                                                                <input type="hidden" value="@item.ID" name="ChildID" id="ChildID" />
                                                            
                                                                <input type="hidden" value="@item.ChildParentConnectionTbls.Where(a=>a.ChildID==item.ID).Select(a=>a.ParentID).FirstOrDefault()" name="AssignedID" id="AssignedID_@item.ID" />
                                                                <script>

                                                                    document.getElementById("ParentID_"+@item.ID).value = document.getElementById("AssignedID_@item.ID").value;
                                                                </script>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-default pull-right">Submit</button>

                                                                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                            </div>
                                                        </form>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </td>
                                </tr>

                            }

                        </table>
                    </div>
                }
                else
                {
                    <h3 class="box-title">Record Not Found</h3>
                }

            </div>
        </div>
        </div>
    </div>

</section>