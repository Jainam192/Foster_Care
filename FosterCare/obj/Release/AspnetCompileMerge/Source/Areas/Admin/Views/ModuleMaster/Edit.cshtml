@model FosterCare.ModuleMasterTbl

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>Edit Module Master<small>(Edit Module Master)</small></h1>
</section>
<section class="content">
    @using (Html.BeginForm("Edit", "ModuleMaster", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.IsActive)
        <div class="row">
            <div class="col-md-12">
                <div class="box box-warning">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Module Name</label>
                                @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ModuleName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>URl</label>
                                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            <div class="box-footer">
                                <input type="submit" value="Update" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        <a href="/Admin/ModuleMaster/Index" class="btn btn-dropbox">Back to List</a>
    </div>
</section>
