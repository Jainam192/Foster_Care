@model IEnumerable<FosterCare.ParentMasterTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>All Parent Reports<small>(Add, View, Edit, Delete Parent Reports)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="box box-primary " style="min-height:100px">
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "ParentReports", FormMethod.Post))
                        {
                            <label>Search By ParentName(Parent Code)</label>
                            @Html.DropDownList("ParentID", null, "Select Parent Name", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="box box-primary " style="min-height:100px">
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "ParentReports", FormMethod.Post))
                        {
                            <label>Search By Parent District</label>
                            @Html.DropDownList("DistrictID", null, "Select District Name", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Index", "ParentReports", FormMethod.Post))
            {
                <div class="col-md-6">
                    <div class="box box-primary " style="min-height:100px">
                        <div class="box-body">
                            <div class="col-md-5">
                                <label>Last Follow Up Date From</label>
                                <input type="Date" id="FromDate" name="FromDate" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <label>Last Follow Up Date To</label>
                                <input type="Date" id="ToDate" name="ToDate" onblur="multiplyBy()" class="form-control" />
                            </div>
                            <div style="margin-top:23px">
                                <input type="submit" class="btn btn-twitter" value="Search" />
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Parent Reports</h3>
                </div>
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Serial Number
                                    </th>
                                    <th>
                                        Parent District
                                    </th>
                                    <th>
                                        Parent Code
                                    </th>
                                    <th>
                                        Foster Mothers Name
                                    </th>

                                    <th>
                                        Foster Fathers Name
                                    </th>

                                    <th>
                                        Contact Number
                                    </th>
                                    <th>
                                        Create Date
                                    </th>
                                    <th>
                                        Last Follow Up Date
                                    </th>
                                    <th>
                                        User Name
                                    </th>
                                    <th>Action</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FosterParentSerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=> item.DistrictMasterTbl.DistrictName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParentCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FosterMothersName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FosterFathersName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastFollowUpDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdminLoginTbl.UserName)
                                </td>

                                <td>
                                
                                    <a data-toggle="modal" data-target="#modal-details-@item.ID" class="btn btn-xs btn-twitter">Details <i class="fa fa-list"></i></a>
                                    <div class="modal fade text-center" id="modal-details-@item.ID">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h3 class="modal-title">Parent Master Details</h3>
                                                </div>
                                                <div class="modal-body" style="height: 400px; overflow-y: scroll">
                                                    <table class="table table-bordered" style="text-align:left;">

                                                        <tr>
                                                            <td>
                                                                Foster Mothers DOB
                                                            </td>
                                                            <td>
                                                                @item.FosterMothersDOB
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Mother Current Status
                                                            </td>
                                                            <td>
                                                                @item.FosterMotherCurrentStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Mother Highest Education
                                                            </td>
                                                            <td>
                                                                @item.FosterMotherHighestEducation
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Mother Employment Status
                                                            </td>
                                                            <td>
                                                                @item.FosterMotherEmploymentStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Mother Income
                                                            </td>
                                                            <td>
                                                                @item.FosterMotherIncome
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Fathers DOB
                                                            </td>
                                                            <td>
                                                                @item.FosterFathersDOB
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Fathers Current Status
                                                            </td>
                                                            <td>
                                                                @item.FosterFathersCurrentStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Fathers Highest Education
                                                            </td>
                                                            <td>
                                                                @item.FosterFathersHighestEducation
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Fathers Employment Status
                                                            </td>
                                                            <td>
                                                                @item.FosterFathersEmploymentStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Fathers Income
                                                            </td>
                                                            <td>
                                                                @item.FosterFathersIncome
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Address
                                                            </td>
                                                            <td>
                                                                @item.Address
                                                            </td>
                                                        </tr>
                                                        <tr>

                                                            <td>
                                                                Foster Girls Count
                                                            </td>
                                                            <td>
                                                                @item.FosterGirlsCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Foster Boys Count
                                                            </td>
                                                            <td>
                                                                @item.FosterBoysCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Ration Card Foster Children Count
                                                            </td>
                                                            <td>
                                                                @item.RationCardFosterChildrenCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Any Other Fosters
                                                            </td>
                                                            <td>
                                                                @item.AnyOtherFosters
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Child Sheet Fostered Children Count
                                                            </td>
                                                            <td>
                                                                @item.ChildSheetFosteredChildrenCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Adopted Children Count
                                                            </td>
                                                            <td>
                                                                @item.AdoptedChildrenCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Biological Children Count
                                                            </td>
                                                            <td>
                                                                @item.BiologicalChildrenCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Placement Date
                                                            </td>
                                                            <td>
                                                                @item.PlacementDate
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Reason For Fostering
                                                            </td>
                                                            <td>
                                                                @item.ReasonForFostering
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Last Extension Date
                                                            </td>
                                                            <td>
                                                                @item.LastExtensionDate
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Extension Period
                                                            </td>
                                                            <td>
                                                                @item.ExtensionPeriod
                                                            </td>
                                                        </tr>
                                                        <tr>

                                                            <td>
                                                                Termination Date
                                                            </td>
                                                            <td>
                                                                @item.TerminationDate
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Resone For Termisssion
                                                            </td>
                                                            <td>
                                                                @item.ReasonForTermination
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Last Follow Up Date
                                                            </td>
                                                            <td>
                                                                @item.LastFollowUpDate
                                                            </td>
                                                        </tr>
                                                        

                                                    </table>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>