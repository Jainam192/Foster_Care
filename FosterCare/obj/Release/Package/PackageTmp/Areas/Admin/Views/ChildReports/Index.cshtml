@model IEnumerable<FosterCare.ChildMasterTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>
        All Child Reports
        <small>(Add, View, Edit, Delete Child Reports)</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="box box-primary " style="min-height:100px">
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "ChildReports", FormMethod.Post))
                        {
                            <label>Search By Child Name(Child Code)</label>
                            @Html.DropDownList("ChildID", null, "Select Child Name", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="box box-primary " style="min-height:100px">
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "ChildReports", FormMethod.Post))
                        {
                            <label>Search By Address District</label>
                            @Html.DropDownList("DistrictID", null, "Select District Name", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Index", "ChildReports", FormMethod.Post))
            {
                <div class="col-md-6">
                    <div class="box box-primary " style="min-height:100px">
                        <div class="box-body">
                            <div class="col-md-5">
                                <label>Last Follow Up From Date</label>
                                <input type="Date" id="FromDate" name="FromDate" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <label>Last Follow Up To Date</label>
                                <input type="Date" id="ToDate" name="ToDate" onblur="multiplyBy()" class="form-control" />
                            </div>
                            <div style="margin-top:23px">
                                <input type="submit" class="btn btn-twitter" value="Search" />
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

<section class="content">
    <div class="row">

        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Child Reports</h3>
                </div>
          
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Serial Number
                                    </th>
                                    <th>
                                        Institude Name
                                    </th>
                                    <th>
                                        CCI District Name
                                    </th>
                                    <th>
                                        Child Code
                                    </th>
                                    <th>
                                        Child Name
                                    </th>
                                    <th>
                                        Sex
                                    </th>
                                    <th>
                                        DOB
                                    </th>
                                    <th>
                                        Age
                                    </th>
                                    <th>
                                        Address District
                                    </th>
                                    
                                    <th>
                                        Last Follow Up Date
                                    </th>
                                    <th>
                                        User Name
                                    </th>

                                    <th>Action</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CCIMasterTbl.InstitudeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DistrictMasterTbl.DistrictName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChildCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChildName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sex)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DOB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=> item.DistrictMasterTbl3.DistrictName)
                                </td>
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastFollowUpDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdminLoginTbl.UserName)
                                </td>

                                <td>
                                  
                                    <a data-toggle="modal" data-target="#modal-details-@item.ID" class="btn btn-xs btn-twitter">Details <i class="fa fa-list"></i></a>
                                    <div class="modal fade text-center" id="modal-details-@item.ID">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h3 class="modal-title">Child Master Details</h3>
                                                </div>
                                                <div class="modal-body" style="height: 400px; overflow-y: scroll">
                                                    <table class="table table-bordered" style="text-align:left;">

                                                        <tr>
                                                            <td>
                                                                Create Date
                                                            </td>
                                                            <td>
                                                                @item.CreateDate
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Education
                                                            </td>
                                                            <td>
                                                                @item.Education
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Social Group
                                                            </td>
                                                            <td>
                                                                @item.SocialGroup
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Special Child
                                                            </td>
                                                            <td>
                                                                @item.SpecialChild
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Mothers Name
                                                            </td>
                                                            <td>
                                                                @item.MothersName
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Mothers Current Status
                                                            </td>
                                                            <td>
                                                                @item.MothersCurrentStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Fathers Name
                                                            </td>
                                                            <td>
                                                                @item.FathersName
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Fathers Current Status
                                                            </td>
                                                            <td>
                                                                @item.FathersCurrentStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Sisters Count
                                                            </td>
                                                            <td>
                                                                @item.SistersCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Brothers Count
                                                            </td>
                                                            <td>
                                                                @item.BrothersCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Sibling Count
                                                            </td>
                                                            <td>
                                                                @item.SiblingCount
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Care Taker Address
                                                            </td>
                                                            <td>
                                                                @item.CaretakerAddress
                                                            </td>
                                                        </tr>
                                                       
                                                        <tr>
                                                            <td>
                                                                Contact Number
                                                            </td>
                                                            <td>
                                                                @item.ContactNumber
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Closest Alive Relative
                                                            </td>
                                                            <td>
                                                                @item.ClosestAliveRelative
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Relative Address
                                                            </td>
                                                            <td>
                                                                @item.RelativeAddress
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Relative Contact Number
                                                            </td>
                                                            <td>
                                                                @item.RelativeContactNumber
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Data Collection Date
                                                            </td>
                                                            <td>
                                                                @item.DataCollectionDate
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Child Care Institution Enroll Date
                                                            </td>
                                                            <td>
                                                                @item.ChildCareInstitutionEnrollDate
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Child Consent To Fostering
                                                            </td>
                                                            <td>
                                                                @item.ChildConsentToFostering
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Biological Parents Consent To Fostering
                                                            </td>
                                                            <td>
                                                                @item.BiologicalParentsConsentToFostering
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                In CCI For
                                                            </td>
                                                            <td>
                                                                @item.InCCIFor
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Potential For Foster
                                                            </td>
                                                            <td>
                                                                @item.PotentialForFoster
                                                            </td>
                                                        </tr>
                                                        <tr>

                                                            <td>
                                                                Is Fostering
                                                            </td>
                                                            <td>
                                                                @item.IsFostering
                                                            </td>
                                                        </tr>
                                                     
                                                        <tr>
                                                            <td>
                                                                Placement District
                                                            </td>
                                                            <td>
                                                                @item.DistrictMasterTbl1.DistrictName
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Monitoring District
                                                            </td>
                                                            <td>
                                                                @item.DistrictMasterTbl2.DistrictName
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Last Follow Up Date
                                                            </td>
                                                            <td>
                                                                @item.LastFollowUpDate
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>