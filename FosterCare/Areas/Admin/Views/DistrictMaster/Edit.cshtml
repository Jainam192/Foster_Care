@model FosterCare.DistrictMasterTbl

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>Edit District<small>(Edit District)</small></h1>
</section>
<section class="content">
    @using (Html.BeginForm("Edit", "DistrictMaster", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.IsActive)
        @Html.HiddenFor(model => model.CreateDate)
        <div class="row">
            <div class="col-md-12">
                <div class="box box-warning">
                    <div class="box-body">
                        <div class="form-group">
                            <label>State Name</label>
                            @Html.DropDownList("StateID", null, "----Select----", htmlAttributes: new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.StateID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>District Name</label>
                            @Html.EditorFor(model => model.DistrictName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.DistrictName, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            <div class="box-footer">
                                <input type="submit" value="Update" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        <a href="/DistrictMaster/Index" class="btn btn-dropbox">Back to List</a>
    </div>
</section>
