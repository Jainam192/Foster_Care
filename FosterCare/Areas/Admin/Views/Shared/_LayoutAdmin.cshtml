<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <title>Foster Care Society| Admin</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport' />
    <!-- bootstrap 3.0.2 -->
    <link href="~/AdminAssets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="~/AdminAssets/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminAssets/chosen_v1.8.7/chosen.css" />
    <link href="~/AdminAssets/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script>
        window.onload = function () {
            $("#success-alert").fadeTo(3000, 700).slideUp(700, function () {
                $("#success-alert").slideUp(700);
            });

            $("#fail-alert").fadeTo(3000, 700).slideUp(700, function () {
                $("#fail-alert").slideUp(700);
            });
        };
    </script>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="/Admin/Dashboard" class="logo">
            <img alt="Foster Care Society" height="44" />
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <li style="margin-top:10px">
                        <a class="btn btn-danger badge pull-right mt15" style="font-size:16px;padding:5px;" href="@Url.Action("Logout", "Dashboard", null)">Logout <i class="fa fa-sign-out"></i> </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left info">
                        <p>Welcome  <span>@Session["Admin Name"]</span></p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        <small id="Span1"></small>
                    </div>
                </div>
                <p id="UserId" hidden>@Session["AdminId"]</p>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="active"><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
                    <li class="treeview" id="SupperAdmin" style="display:none;">
                        <a href="##"><i class="fa fa-user"></i><span>Super Admin</span><i class="fa fa-angle-left pull-right"></i></a>
                        <ul class="treeview-menu">
                            <li style="display:none;"><a href="/Admin/RoleMaster"><i class="fa fa-square"></i> <span>Role Master</span></a></li>
                            <li style="display:none;"><a href="/Admin/ModuleMaster"><i class="fa fa-square"></i> <span>Module Master</span></a></li>
                            <li style="display:none;"><a href="/Admin/ManageUser"><i class="fa fa-user"></i> <span>Manage Users</span></a></li>
                            <li><a href="/Admin/PermissionMaster"><i class="fa fa-id-card"></i> <span>Permission Master</span></a></li>
                            <li style="display:none;"><a href="/Admin/CCIMaster"><i class="fa fa-id-card"></i> <span>CCI Master</span></a></li>
                            <li @*style="display:none;"*@><a href="/Admin/StateMaster"><i class="fa fa-map-marker"></i> <span>State Master</span></a></li>

                            <li style="display:none;"><a href="/Admin/DistrictMaster"><i class="fa fa-map-marker"></i> <span>District Master</span></a></li>
                            <li @*style="display:none;"*@><a href="/Admin/TehsilMaster"><i class="fa fa-map-marker"></i> <span>Tehsil Master</span></a></li>

                        </ul>
                    </li>
                    <li style="display:none;"><a href="/Admin/ChildMaster"><i class="fa fa-child"></i> <span>Child Master</span></a></li>
                    <li style="display:none;"><a href="/Admin/ParentMaster"><i class="fa fa-user"></i> <span>Parent Master </span></a></li>
                    <li style="display:none;"><a href="/Admin/PotentialParentMasters"><i class="fa fa-child"></i> <span>Potential Parent Master</span></a></li>
                    <li @*style="display:none;"*@><a href="/Admin/FosterParent"><i class="fa fa-child"></i> <span>Foster Parent</span></a></li>
                    <li @*style="display:none;"*@><a href="/Admin/ChildIndividual"><i class="fa fa-child"></i> <span>Child Individual</span></a></li>
                    <li @*style="display:none;"*@><a href="/Admin/ChildInstitution"><i class="fa fa-child"></i> <span>Child Institution</span></a></li>
                    <li class="treeview" style="display:none;">
                        <a href="#"><i class="fa fa-user"></i><span>All Reports</span><i class="fa fa-angle-left pull-right"></i></a>
                        <ul class="treeview-menu">
                            <li style="display:none;"><a href="/Admin/ChildReports"><i class="fa fa-list"></i> <span>Child Reports</span></a></li>
                            <li style="display:none;"><a href="/Admin/ParentReports"><i class="fa fa-list"></i> <span>Parent Reports</span></a></li>
                            <li style="display:none;"><a href="/Admin/PotentialParentReports"><i class="fa fa-list"></i> <span>Potential Parent Reports</span></a></li>
                            <li style="display:none;"><a href="/Admin/AssignChildParent"><i class="fa fa-list"></i> <span>Assigned Child Parent </span></a></li>
                        </ul>
                    </li>
                    <li style="display:none;"><a href="/Admin/Enquiry"><i class="fa fa-list"></i> <span>View Enquires </span></a></li>
                    <li><a href="/Admin/ChangePassword"><i class="fa fa-cog"></i> <span>Change Password</span></a></li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <aside class="right-side">
            @RenderBody()
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <!-- jQuery 2.0.2 -->
    <script src="~/AdminAssets/chosen_v1.8.7/docsupport/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/AdminAssets/chosen_v1.8.7/chosen.jquery.js" type="text/javascript"></script>
    <script src="~/AdminAssets/chosen_v1.8.7/docsupport/prism.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/AdminAssets/chosen_v1.8.7/docsupport/init.js" type="text/javascript" charset="utf-8"></script>

    <script src="~/AdminAssets/js/jquery.min.js" type="text/javascript"></script>
    <!-- jQuery UI 1.10.3 -->
    <script src="~/AdminAssets/js/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
    <!-- Bootstrap -->
    <script src="~/AdminAssets/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- InputMask -->
    @*<script src="~/AdminAssets/timepicker/bootstrap-timepicker.min.js"></script>*@
    <script src="~/AdminAssets/js/plugins/input-mask/jquery.inputmask.js" type="text/javascript"></script>
    <script src="~/AdminAssets/js/plugins/input-mask/jquery.inputmask.date.extensions.js" type="text/javascript"></script>
    <script src="~/AdminAssets/js/plugins/input-mask/jquery.inputmask.extensions.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminAssets/js/AdminLTE/app.js" type="text/javascript"></script>
    <script>
        var UserID = document.getElementById("UserId").innerHTML;
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Dashboard/permission?UserId=" + UserID,
                success: function (data) {
                    $(data).each(function (index, mod) {
                        var modURL = mod.URL;
                        $('.sidebar-menu li').each(function () {
                            var pageUrl = $("a", this).attr('href');
                            if (pageUrl == modURL) {
                                $(this).attr("style", "display:block");
                            }
                        })
                    });
                },
                error: function (err) {
                    alert(err);
                }
            });
        });
    </script>
    <script type="text/javascript">
        window.onbeforeunload = function () {
            var inputs = document.getElementsByTagName("INPUT");
            for (var i in inputs) {
                if (inputs[i].type == "button" || inputs[i].type == "submit") {
                    inputs[i].disabled = true;
                    inputs[i].value = "Processing...";
                }
            }
            var anchors = document.getElementsByTagName("a");
            for (var j in anchors) {
                anchors[j].style = "cursor: not-allowed;opacity: 0.5;";
                anchors[j].href = "#";
            }
        };
    </script>
    <script>
        $(function () {
            //Timepicker
            $('.timepicker').timepicker({
                showInputs: false
            })
        })
    </script>
</body>
</html>
