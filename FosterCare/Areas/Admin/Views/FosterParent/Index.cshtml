@model IEnumerable<FosterCare.FosterParentTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>All Foster Parent<small>(Add, View, Edit, Delete Foster Parent)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12 mb5">
            <a href="/Admin/FosterParent/Create/" class="btn btn-dropbox">Add New Foster Parent</a>
        </div>
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Foster Parent</h3>
                </div>
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FosterCareFor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FosterParentName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StateMasterTbl.StateName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.District)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Age)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreateDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ModifiedDate)
                                    </th>

                                    <th>
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FosterCareFor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FosterParentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateMasterTbl.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.District)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                                </td>

                                <td>
                                    <a class="btn btn-xs btn-warning" href="/admin/FosterParent/Edit/@item.Id">Edit <i class="fa fa-edit"></i></a>
                                    <a data-toggle="modal" data-target="#modal-delete-@item.Id" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                    <div class="modal fade text-center" id="modal-delete-@item.Id">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h4 class="modal-title">Foster Parent item  Delete Confirmation</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>Are you Sure you want to delete Foster Parent item</h4>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                    <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "FosterParent", new { id = item.Id })">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a data-toggle="modal" data-target="#modal-details-@item.Id" class="btn btn-xs btn-twitter">Details <i class="fa fa-list"></i></a>
                                    <div class="modal fade text-center" id="modal-details-@item.Id">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h3 class="modal-title">Child Master Details</h3>
                                                </div>
                                                <div class="modal-body" style="height: 400px; overflow-y: scroll">
                                                    <table class="table table-bordered" style="text-align:left;">
                                                       
                                                        <tr>
                                                            <td>
                                                                Reason For Foster Care
                                                            </td>
                                                            <td>
                                                                @item.ReasonForFosterCare
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Other Reasone
                                                            </td>
                                                            <td>
                                                                @item.OtherReasone
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Education
                                                            </td>
                                                            <td>
                                                                @item.Education
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Other Education
                                                            </td>
                                                            <td>
                                                                @item.OtherEducation
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Occupation
                                                            </td>
                                                            <td>
                                                                @item.Occupation
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Marital Status
                                                            </td>
                                                            <td>
                                                                @item.MaritalStatus
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Name Of Spouse
                                                            </td>
                                                            <td>
                                                                @item.NameOfSpouse
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Age Of Spouse
                                                            </td>
                                                            <td>
                                                                @item.AgeOfSpouse
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Occupation Of Spouse
                                                            </td>
                                                            <td>
                                                                @item.OccupationOfSpouse
                                                            </td>
                                                        </tr>

                                                    </table>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>