@model IEnumerable<FosterCare.AdminLoginTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    function myFun() {
        var a = document.getElementById("Password").value;
        var b = document.getElementById("ConfirmPassword").value;
        if (a != b) {
            document.getElementById("msg").innerText = "Password couldn't Match";
            document.getElementById("ConfirmPassword").value = "";
        }
        else {
            document.getElementById("msg").innerText = "";
        }
    }
</script>
<script>
    function CheckPassword() {
        var txtmob = document.getElementById("Password").value;
        if (txtmob.length >= 5) {

        }
        else {
            alert('Password required minimum 5 in length ')
            document.getElementById("Password").value = "";
            return false;
        }
    }
</script>
<section class="content-header">
    <h1>All Users<small>(Add, View, Edit, Delete Users)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12 mb5">
            <a href="/Admin/ManageUser/Create/" class="btn btn-dropbox">Add New User</a>
        </div>
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All User</h3>
                </div>
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        User Name
                                    </th>
                                    <th>
                                        Contact Number
                                    </th>
                                    <th>
                                       User Role
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoleMasterTbl.RoleName)
                                        </td>
                                        <td>

                                            <a data-toggle="modal" data-target="#modal-change-@item.Id" class="btn btn-xs btn-facebook">Change Password <i class="fa fa-lock"></i></a>
                                            <div class="modal fade text-center" id="modal-change-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title">Change password</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/Admin/ManageUser/ChangePassword" method="post">
                                                                <input type="password" id="Password" name="Password" placeholder="New Password" class="form-control" required onchange="CheckPassword()" /><br />
                                                                <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" class="form-control" onblur="myFun()" required /><br />

                                                                <span id="msg" style="color:red"></span>
                                                                <input type="hidden" id="Id" name="Id" value="@item.Id" />
                                                                <div class="modal-footer">
                                                                    <button type="submit" class="btn btn-default pull-right">Submit</button>

                                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <a data-toggle="modal" data-target="#modal-delete-@item.Id" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                            <div class="modal fade text-center" id="modal-delete-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title">User Delete Confirmation</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h4>Are you Sure you want to delete User </h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                            <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "ManageUser", new { id = item.Id })">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>