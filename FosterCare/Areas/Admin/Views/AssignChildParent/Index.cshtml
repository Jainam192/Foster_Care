@model IEnumerable<FosterCare.ChildParentConnectionTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>All Assigned Child Parent Report<small>(View Assigned Child Parent Report)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="box box-primary " style="min-height:100px">
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "AssignChildParent", FormMethod.Post))
                        {
                            <label>Search By Child Name(Child Code)</label>
                            @Html.DropDownList("ChildID", null, "Select Child Name", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary"  style="min-height:100px">
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "AssignChildParent", FormMethod.Post))
                        {
                        <label>Search By Parent Name(Parent Code)</label>
                            @Html.DropDownList("ParentID", null, "Select Parent Name", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Assigned Child Parent Report</h3>
                </div>
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Child Name
                                    </th>
                                    <th>
                                        Parent Name
                                    </th>
                                    <th>
                                        Create Date
                                    </th>
                                    <th>
                                        Modified Date
                                    </th>

                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChildMasterTbl.ChildName) (@item.ChildMasterTbl.ChildCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ParentMasterTbl.FosterFathersName) (@item.ParentMasterTbl.ParentCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                                        </td>

                                    </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>